{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "outDir": "dist"
  },
  "include": ["src/**/*", "schemas/**/*"],
  "exclude": ["node_modules", "dist"]
}
